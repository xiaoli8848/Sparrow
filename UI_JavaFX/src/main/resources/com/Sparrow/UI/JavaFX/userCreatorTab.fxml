<Tab fx:id="UserCreatorTab" text="登录" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Sparrow.UI.JavaFX.controller.launcherUI_JavaFX_userCreatorTab_Controller">
    <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <children>
                <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="14.0" layoutY="209.0" pickOnBounds="true" preserveRatio="true" />
                <Separator layoutX="123.0" layoutY="36.0" orientation="VERTICAL" prefHeight="448.0" />
                <ToggleButton fx:id="offlineUserType" layoutX="222.0" layoutY="62.0" mnemonicParsing="false" selected="true" text="离线账户">
                    <toggleGroup>
                        <ToggleGroup fx:id="userTypeChooser" />
                    </toggleGroup>
                </ToggleButton>
                <ToggleButton fx:id="onlineUserType" layoutX="299.0" layoutY="62.0" mnemonicParsing="false" text="线上账户" toggleGroup="$userTypeChooser" />
                <Pane fx:id="offlineUserCreator" layoutX="168.0" layoutY="103.0" prefHeight="354.0" prefWidth="262.0">
                    <children>
                        <Label layoutX="24.0" layoutY="39.0" text="昵称：" />
                        <TextField fx:id="offlineUserCreator_Name" layoutX="76.0" layoutY="31.0" />
