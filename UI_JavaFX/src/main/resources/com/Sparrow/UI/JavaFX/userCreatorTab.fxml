                        <PasswordField fx:id="onlineUserCreator_Password" layoutX="77.0" layoutY="86.0" />
                        <Label layoutX="24.0" layoutY="94.0" text="密码：" />
                        <Label layoutX="18.0" layoutY="155.0" text="服务器：" />
                        <TextField fx:id="onlineUserCreator_Server" layoutX="76.0" layoutY="147.0" promptText="===外置登录使用===" />
                    </children>
                </Pane>
                <JFXButton fx:id="addUserButton" buttonType="RAISED" layoutX="392.0" layoutY="474.0" onAction="#addUser" text="添加账户" />
            </children>
        </AnchorPane>
    </content>
</Tab>
